<div class="row">
  <div class="col-md-5 col-md-offset-5">
<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

    <div class="input-group">
      <span class="input-group-addon" id="basic-addon1" style="width: 110px"><%= f.label 'First Name' %></span>
      <!--<input type="text" class="form-control" id="basic-url" aria-describedby="basic-addon3">-->
      <%= f.text_field :firstname, class: 'form-control' %>
    </div>

    <br>

    <div class="input-group">
      <span class="input-group-addon" id="basic-addon1" style="width: 110px"><%= f.label 'Last Name' %></span>
      <!--<input type="text" class="form-control" id="basic-url" aria-describedby="basic-addon3">-->
      <%= f.text_field :lastname, class: 'form-control' %>
    </div>

    <br>

    <div class="input-group">
      <span class="input-group-addon" id="basic-addon1" style="width: 110px"><%= f.label :username %></span>
      <!--<input type="text" class="form-control" id="basic-url" aria-describedby="basic-addon3">-->
      <%= f.text_field :username, class: 'form-control' %>
    </div>

    <br>

    <div class="input-group">
      <span class="input-group-addon" id="basic-addon1" style="width: 110px"><%= f.label :email %></span>
      <!--<input type="text" class="form-control" id="basic-url" aria-describedby="basic-addon3">-->
      <%= f.email_field :email, class: 'form-control' %>
    </div>

<br>

  <div>
    <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
  </div>
    <div class="input-group">
      <span class="input-group-addon" id="basic-addon3" style="width: 110px" ><%= f.label :password %></span>
      <!--<input type="text" class="form-control" id="basic-url" aria-describedby="basic-addon3">-->
      <%= f.password_field :password, class: 'form-control' , autocomplete: "off" %>
    </div>

    <br>

    <div class="input-group">
      <span class="input-group-addon" id="basic-addon4" style="width: 110px" ><%= f.label 'Confirm' %></span>
      <!--<input type="text" class="form-control" id="basic-url" aria-describedby="basic-addon3">-->
      <%= f.password_field :password_confirmation, class: 'form-control' , autocomplete: "off" %>
    </div>

    <br>

    <div class="actions">
    <%= f.submit "Sign up" , class: 'btn btn-primary' %>
  </div>
<% end %>
 <br>
<%= render "devise/shared/links" %>
    </div>
</div>